@model TaskUser.ViewsModels.StockViewsModels.StockViewModels
@using TaskUser.Resources
@inject SharedViewLocalizer<StockResource> Localizer


@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@* @if (ViewBag.ErrorEdit != null) *@
@* { *@
@*     @Localizer["Edit Failure"] *@
@*          *@
@* } *@
<form method="post" asp-controller="Stock" enctype="multipart/form-data" asp-action="Edit">
    <legend>@Localizer.GetLocalizedString("lbl_EditStock")</legend>
    @*<input type="hidden" class="form-control" asp-for="Id"  placeholder="Your name" required>*@
    <div class="form-group col-xs-6">
        <label>@Localizer.GetLocalizedString("lbl_StoreId")</label>
        <select class="form-control" asp-for="StoreId" asp-items="@ViewBag.StoreId">
            @* <option asp-for="StoreId" >@ViewBag.StoreId[""]</option> *@
        </select>
            
        <span asp-validation-for="StoreId"></span>
    </div>
    <div class="form-group col-xs-6">
        <label>@Localizer.GetLocalizedString("lbl_ProductId")</label>
        <select class="form-control" asp-for="ProductId" asp-items="@ViewBag.ProductId"></select>
        <span asp-validation-for="ProductId"></span>
    </div>
    <div class="form-group col-xs-6">
        <label>@Localizer.GetLocalizedString("lbl_Quantity")</label>
        <input type="text" class="form-control" asp-for="Quantity" placeholder="Quantity" >
        <span asp-validation-for="Quantity"></span>
    </div>
        
       
                       
                       
    <div class="form-group col-xs-12">
        <button type="submit" class="btn btn-primary btn-lg btn-block">
            @Localizer.GetLocalizedString("btn_Edit")
        </button>
    </div>
</form>
