@model TaskUser.ViewsModels.BrandViewsModels.BrandViewsModels
@using TaskUser.Resources
@inject SharedViewLocalizer Localizer

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    @if (ViewBag.ErrorEdit != null)
    {
        @Localizer["Edit Failure"]
              
    }
    <form method="post" asp-controller="Brand" asp-action="Edit">
        <legend>
            @Localizer.GetLocalizedString("lg_editbrand")
           
        </legend>
        @*<input type="hidden" class="form-control" asp-for="Id"  placeholder="Your name" required>*@
        <div class="form-group col-xs-6">
            <label for="name-field">
                @Localizer.GetLocalizedString("lg_brandname")
            </label>
            <input type="text" class="form-control" asp-for="BrandName" placeholder="BrandName" >
            <span asp-validation-for="BrandName"></span>
        </div>
                       
                       
        <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-primary btn-lg btn-block">
                @Localizer.GetLocalizedString("bt_edit")
            </button>
        </div>
    </form>
    @* <div class="form-group col-xs-12"> *@
    @*     <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="Back"> *@
    @*         <img src="~/img/iconback.png" alt="Smiley face" height="42" width="42"> *@
    @*         @Localizer["Go back to the main page"] *@
    @*     </a> *@
    @* </div> *@
              
</div>
