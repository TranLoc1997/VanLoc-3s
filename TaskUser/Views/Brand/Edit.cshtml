@model TaskUser.ViewsModels.BrandViewsModels.BrandViewsModels



@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    @if (ViewData["EditFailure"] != null)
    {
        <div class="alert alert-info"style="width: 200px">
            <strong>@ViewData["EditFailure"]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">x</button>
        </div>
 
    }
    <form method="post" asp-controller="Brand" asp-action="Edit">
        <legend>
            @BrandLocalizer.GetLocalizedString("lbl_EditBrand")
           
        </legend>
        @*<input type="hidden" class="form-control" asp-for="Id"  placeholder="Your name" required>*@
        <div class="form-group col-xs-6">
            <label>
                @BrandLocalizer.GetLocalizedString("lbl_BrandName")
            </label>
            <input type="text" class="form-control" asp-for="BrandName" placeholder="BrandName" >
            <span asp-validation-for="BrandName"></span>
        </div>
                       
                       
        <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-primary btn-lg btn-block">
                @BrandLocalizer.GetLocalizedString("btn_Edit")
            </button>
        </div>
    </form>
    @* <div class="form-group col-xs-12"> *@
    @*     <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="Back"> *@
    @*         <img src="~/img/iconback.png" alt="Smiley face" height="42" width="42"> *@
    @*         @Localizer["Go back to the main page"] *@
    @*     </a> *@
    @* </div> *@
              
</div>
