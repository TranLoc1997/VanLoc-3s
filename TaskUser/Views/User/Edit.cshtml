@model TaskUser.ViewsModels.UserViewsModels.EditUserViewsModels


@{
    ViewBag.Title =UserLocalizer.GetLocalizedString("lbl_EditUser");
    Layout = "_Layout";
}
<div class="container">
    @if (ViewData["EditFailure"] != null)
    {
        <div class="alert alert-info"style="width: 200px">
            <strong>@ViewData["EditFailure"]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">x</button>
        </div>
 
    }
    
    <form method="post" asp-controller="User" asp-action="Edit">
        <legend>
            @UserLocalizer.GetLocalizedString("lbl_EditUser")

        </legend>
        @*<input type="hidden" class="form-control" asp-for="Id"  placeholder="Your name" required>*@
        <div class="form-group col-xs-6">
            <label>
                @UserLocalizer.GetLocalizedString("lbl_Name")
                
            </label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Your name" required>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group col-xs-6">
            <label>
                @UserLocalizer.GetLocalizedString("lbl_Email")
                
            </label>
            <input type="text" class="form-control" asp-for="Email" placeholder="Your Email" required>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group col-xs-6 hidden">
            <label> @UserLocalizer.GetLocalizedString("lbl_Phone")</label>
            <input type="text" class="form-control" asp-for="Phone" placeholder="Phone" required/>
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group col-xs-6 hidden">
            <label> @UserLocalizer.GetLocalizedString("lbl_StoreId")</label>
            <select class="form-control" asp-for="StoreId" asp-items="@ViewBag.StoreId">
                @* <option asp-for="StoreId" >@ViewBag.StoreId[""]</option> *@
            </select>
            <span asp-validation-for="StoreId"></span>
        </div>
        <div id="hidden-other-subject" class="form-group col-xs-6 hidden">
            <label>
                @UserLocalizer.GetLocalizedString("lbl_IsActision")
            </label>
            <input type="checkbox" asp-for="IsActiver" />
            <span asp-validation-for="IsActiver"></span>
        </div>

        <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-primary btn-lg btn-block">
                @Localizer.GetLocalizedString("btn_Edit")
            </button>
        </div>
    </form>
    <div class="form-group col-xs-12">
        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">
            <img src="~/img/iconback.png" alt="Smiley face" height="42" width="42">
            @Localizer.GetLocalizedString("btn_GoBackToTheMainPage")
        </a>
    </div>
</div>

