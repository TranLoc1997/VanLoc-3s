@*          *@
@*          *@
@*     } *@

    <table class="table table-bordered table-sm">
        <thead align="center">

        <tr class="table-primary">
            <th>
                ID
            </th>
            <th>
                @ProductLocalizer.GetLocalizedString("lbl_ProductName")
               

            </th>
            <th>
                @ProductLocalizer.GetLocalizedString("lbl_BrandId")
             
            </th>

            <th>
                @ProductLocalizer.GetLocalizedString("lbl_CategoryId")
     
            </th>
            <th>
                @ProductLocalizer.GetLocalizedString("lbl_ModelYear")
            
            </th>

            <th>
                @ProductLocalizer.GetLocalizedString("lbl_Picture")
              
            </th>
            <th>
                @ProductLocalizer.GetLocalizedString("lbl_ListPrice")
            
            </th>
            <th>
                @ProductLocalizer.GetLocalizedString("lbl_manipulation")
            
            </th>
        </tr>
        </thead>
        <tbody>
        <a class="btn" style="color: black" asp-controller="Product" asp-action="Create">
            <img src="~/img/addproduct.png" alt="Smiley face" height="32" width="32">
        </a>


        @foreach (var item in Model)
        {
            <tr align="center">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelYear)
                </td>
                <td>
                    <img src="~/img/@Html.DisplayFor(modelItem => item.Picture)" height="100" width="100"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ListPrice)
                </td>


                <td>
                    <a class="btn" style="color: black" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">
                        <img src="~/img/Edit.png" alt="Smiley face" height="32" width="32">
                    </a> |
                    <a class="btn" style="color: black" onclick="return confirm('@Localizer.GetLocalizedString("btn_AreYouSureYouWantToDeleteIt?")')" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">
                        <img src="~/img/deleteproduct.png" alt="Smiley face" height="32" width="32">
                    </a>
                </td>
            </tr>
