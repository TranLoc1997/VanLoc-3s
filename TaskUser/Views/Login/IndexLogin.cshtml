@using TaskUser.ViewsModels
@model LoginViewModel


@{
    ViewBag.Title =@LoginLocalizer.GetLocalizedString("lbl_SignIn");
  Layout = "_LayoutLogin";
}


@* <link rel="stylesheet" href="~/css/Login.css" /> *@
<link rel="stylesheet" href="~/css/main.css" />
<link rel="stylesheet" href="~/css/util.css" />
<body>

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form-title" >
                <span class="login100-form-title-1">
                    @LoginLocalizer.GetLocalizedString("lbl_SignIn")
                    
                </span>
            </div>

            <form class="login100-form validate-form" asp-action="IndexLogin" asp-controller="Login" method="post">
                <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
                    <span class="label-input100">@LoginLocalizer.GetLocalizedString("lbl_UserName")</span>
                    <input class="input100" asp-for="Email" type="text">
                    <span class="focus-input100" asp-validation-for="Email"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                    <span class="label-input100">@LoginLocalizer.GetLocalizedString("lbl_Password")</span>
                    <input asp-for="PassWord" class="input100" type="password">
                    <span class="focus-input100" asp-validation-for="PassWord"></span>
                </div>

                <div class="flex-sb-m w-full p-b-30">
                    <div>
                        <input class="input-checkbox100"  type="checkbox" name="remember-me">
                        <label class="label-checkbox100" >
                            @LoginLocalizer.GetLocalizedString("btn_RememberMe") 
                        </label>
                    </div>

                    <div>
                        <a href="#" class="txt1">
                            
                            @LoginLocalizer.GetLocalizedString("btn_ForgotPassword?") 
                        </a>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                       
                        @LoginLocalizer.GetLocalizedString("btn_Login") 
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

</body>
<link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="fonts/Linearicons-Free-v1.0.0/icon-font.min.css">

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<!-- endinject -->
